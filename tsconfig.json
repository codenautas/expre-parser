{
    "compilerOptions": {
        "declaration": true,
        "outDir": "lib",
        "module": "none",
        "target": "es2017",
        // "outFile": "lib/ind.js", // https://basarat.gitbooks.io/typescript/docs/tips/outFile.html (see summary) // https://www.typescriptlang.org/docs/handbook/namespaces.html#splitting-across-files (see also triple slash directives)
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [ "es7" , "dom"],
        "typeRoots" : ["./node_modules/@types","./node_modules/types.d.ts/modules"],
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
        "noFallthroughCasesInSwitch": true
    },
    "include":[
        "src", "test"
    ]
}